<configuration>
    <logger name="org.xhtmlrenderer.pdf.ITextFontResolver" level="INFO"/>
    <root level="INFO">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </root>
</configuration>